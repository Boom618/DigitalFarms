<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#263238">

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_centerVertical="true"
        android:src="@drawable/btn_menu_selector"/>

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_rb_bg"
        android:layout_centerInParent="true">

        <RadioButton
            android:id="@+id/rb_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_5"
            android:gravity="center"
            android:text="摄像头"
            android:checked="true"
            android:layout_weight="1"
            android:background="@drawable/rb_selector_bg"
            android:textColor="@drawable/rb_txt_selector_black2white"
            android:button="@null"
            />

        <RadioButton
            android:id="@+id/rb_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_5"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/rb_selector_bg"
            android:textColor="@drawable/rb_txt_selector_black2white"
            android:text="气象站"
            android:button="@null"
            />

    </RadioGroup>


    <ImageView
        android:id="@+id/iv_map"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/space_10"
        android:visibility="visible"
        android:src="@mipmap/icon_map"
        />


</RelativeLayout>